          each member in memberList
            .col-xl-3.col-lg-3.col-md-6.col-sm-6.col-12
              .team-single-digital.rts-img-reveal-item(data-subtitle=member.subtitle data-title=member.title data-fx="1")
                a.thumbnail(href="#")
                  img(src=`assets/images/team/tm/${member.img}` alt="team-area")
                .rts-img-reveal-wrapper
                  .rts-img-reveal-wrapper__inner
                    .rts-img-reveal-wrapper__img
                      .rts-hover-wrapper

    //- Blog
    .rts-blog-post-h5.rts-section-gap-2.blog-bg-h5
      .container
        .row.mb--30
          .col-12
            .title-area.ho-5(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800")
              span Latest Post Articles
              h2.title Check It Now
        .row.g-24
          each blog in blogList
            .col-lg-6.col-md-12.col-sm-12.col-12
              .rts-blog-area-h5-single(data-sal-delay=(blog.img === '07.jpg' ? '150' : '250') data-sal="zoom-in" data-sal-duration="800")
                a.thumbnail(href="#")
                  img(src=`assets/images/blog/${blog.img}` alt="blog_image")
                .inner-area
                  a(href="#")
                    h5.title !{blog.title}
                  .social-area
                    .time-area
                      i.far.fa-clock
                      span 15 Oct, 2022
                    .time-area.admin
                      i.far.fa-user
                      span by Admin
                  p.disc
