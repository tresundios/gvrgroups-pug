//- index.pug
doctype html
html(lang="en")
  //- Define project data in server-side context
  //- Define project data in server-side context with simplified syntax
  include includes/varItems.pug

  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title GVR Groups - Smart Home Automation Solutions
    meta(name="description", content="GVR Groups is a leading provider of cutting-edge smart home automation and electronic security solutions in Chennai and Coimbatore, Tamil Nadu, India.")
    meta(name="keywords", content="Smart Home Automation, Electronic Security Solutions, Chennai, Coimbatore, GVR Groups")
    meta(name="author", content="GVR Groups")
    meta(name="robots", content="index, follow")
    meta(name="theme-color", content="#3B38EB")
    // Favicon
    link(rel='icon', type='image/x-icon', href='assets/logo.ico')
    include includes/css.pug

  body.index-two
    include includes/header.pug
    //- Mobile Menu (simplified for brevity)

    include includes/GVRAddress.pug

    #anywhere-home

    //- Banner/Slider
    include includes/banner.pug
   
    //- About Us
    .rts-section-gap
      .container
        .row.align-items-center
          .col-lg-7
            .thumbnail(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800")
              img(src="assets/images/about-us/01.jpg" alt="creative_about")
          .col-lg-5
            .about-right-one-area
              .title-area
                span(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800") About Company
                h3.title(data-sal-delay="200" data-sal="slide-up" data-sal-duration="800") Trusted Experts in Home Automation & Security
              p.disc(data-sal-delay="250" data-sal="slide-up" data-sal-duration="800")
                | GVR Groups is a leading provider of cutting-edge smart home automation and electronic security solutions in Chennai and Coimbatore, Tamil Nadu, India. We are an authorized dealer for Control4 – a premium U.S. brand for Smart Home Automation – since 2010. We also proudly represent top automation brands such as Panasonic Automation and GM Automation.
              p.disc(data-sal-delay="300" data-sal="slide-up" data-sal-duration="800")
                | We offer both wired and wireless automation solutions tailored for residential, commercial, and retrofit projects. Whether you're building a new home, upgrading an office, or modernizing an existing space, we have the right solution for you.
              .button-area(data-sal-delay="300" data-sal="slide-up" data-sal-duration="800")
                a.rts-btn.btn-primary(href="#") More About Us

    //- Project Section
    .rts-project-area
      .title-area.text-center
        span(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800") Our Solutions
        h3.title(data-sal-delay="200" data-sal="slide-up" data-sal-duration="800") Smart Automation & Security, Simplified
      .container
        .row
          .col-12
            .tab-button-area-one
              ul.nav.nav-tabs#myTab(role="tablist")
                li.nav-item(role="presentation")
                  button.nav-link.active#home-tab(data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true") All Projects
                li.nav-item(role="presentation")
                  button.nav-link#profile-tab(data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false") Business
                li.nav-item(role="presentation")
                  button.nav-link#contact-tab(data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false") Solution
                li.nav-item(role="presentation")
                  button.nav-link#contact-tabs(data-bs-toggle="tab" data-bs-target="#contacts" type="button" role="tab" aria-controls="contacts" aria-selected="false") Marketing
                li.nav-item(role="presentation")
                  button.nav-link#contact-tabrts(data-bs-toggle="tab" data-bs-target="#contactrts" type="button" role="tab" aria-controls="contactrts" aria-selected="false") Marketing
            .tab-content-area.mt--50.mt_sm--30
              .tab-content#myTabContent
                .tab-pane.fade.show.active#home(role="tabpanel" aria-labelledby="home-tab")
                  .row.g-5
                    each project in allProjects
                      .col-xl-4.col-lg-4.col-md-6.col-sm-6.col-12
                        .rts-product-one
                          .thumbnail-area
                            img(src=`assets/images/portfolio/${project.img}` alt="Business_Finbiz")
                            a.rts-btn.btn-primary.rounded(href="project-details.html")
                              i.far.fa-arrow-right
                          .product-contact-wrapper
                            a(href="project-details.html")
                              h5.title #{project.title}
                            span Business Solution
                .tab-pane.fade#profile(role="tabpanel" aria-labelledby="profile-tab")
                  .row.g-5
                    each project in businessProjects
                      .col-xl-4.col-lg-4.col-md-6.col-sm-6.col-12
                        .rts-product-one
                          .thumbnail-area
                            img(src=`assets/images/portfolio/${project.img}` alt="Business_Finbiz")
                            a.rts-btn.btn-primary.rounded(href="project-details.html")
                              i.far.fa-arrow-right
                          .product-contact-wrapper
                            a(href="project-details.html")
                              h5.title #{project.title}
                            span Business Solution
                .tab-pane.fade#contact(role="tabpanel" aria-labelledby="contact-tab")
                  .row.g-5
                    each project in solutionProjects
                      .col-xl-4.col-lg-4.col-md-6.col-sm-6.col-12
                        .rts-product-one
                          .thumbnail-area
                            img(src=`assets/images/portfolio/${project.img}` alt="Business_Finbiz")
                            a.rts-btn.btn-primary.rounded(href="project-details.html")
                              i.far.fa-arrow-right
                          .product-contact-wrapper
                            a(href="project-details.html")
                              h5.title #{project.title}
                            span Business Solution
                .tab-pane.fade#contacts(role="tabpanel" aria-labelledby="contact-tabs")
                  .row.g-5
                    each project in marketingProjects1
                      .col-xl-4.col-lg-4.col-md-6.col-sm-6.col-12
                        .rts-product-one
                          .thumbnail-area
                            img(src=`assets/images/portfolio/${project.img}` alt="Business_Finbiz")
                            a.rts-btn.btn-primary.rounded(href="project-details.html")
                              i.far.fa-arrow-right
                          .product-contact-wrapper
                            a(href="project-details.html")
                              h5.title #{project.title}
                            span Business Solution
                .tab-pane.fade#contactrts(role="tabpanel" aria-labelledby="contact-tabrts")
                  .row.g-5
                    each project in marketingProjects2
                      .col-xl-4.col-lg-4.col-md-6.col-sm-6.col-12
                        .rts-product-one
                          .thumbnail-area
                            img(src=`assets/images/portfolio/${project.img}` alt="Business_Finbiz")
                            a.rts-btn.btn-primary.rounded(href="project-details.html")
                              i.far.fa-arrow-right
                          .product-contact-wrapper
                            a(href="project-details.html")
                              h5.title #{project.title}
                            span Business Solution

    //- Team
