    //- About Us
    .rts-section-gap
      .container
        .row.align-items-center
          .col-lg-7
            .thumbnail(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800")
              img(src="assets/images/about-us/01.jpg" alt="creative_about")
          .col-lg-5
            .about-right-one-area
              .title-area
                span(data-sal-delay="150" data-sal="slide-up" data-sal-duration="800") About Company
